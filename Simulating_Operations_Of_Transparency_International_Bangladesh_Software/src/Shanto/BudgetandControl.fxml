<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<!-- Added TextField import -->

<AnchorPane prefHeight="833.0" prefWidth="1046.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Shanto.BudgetAndControlController">

    <!-- Header -->
    <VBox layoutX="10.0" layoutY="35.0" prefHeight="72.0" prefWidth="403.0" spacing="10.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Budget and Control" />
        <Label text="Welcome to the Budget and Control Platform" />
    </VBox>

    <!-- Navigation Bar -->
    <MenuBar>
        <Menu text="File">
            <MenuItem onAction="#exitApplication" text="Exit" />
        </Menu>
    </MenuBar>

    <!-- Content Area -->
    <SplitPane dividerPositions="0.5" layoutX="10.0" layoutY="119.0" prefHeight="584.0" prefWidth="1026.0">
        <!-- Budget List -->
        <VBox style="-fx-background-color: lightgray;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Budgets" />
            <ListView fx:id="budgetListView" prefHeight="368.0" prefWidth="509.0" />
            <Button onAction="#viewAllBudgets" text="View All Budgets" />
            <Button onAction="#addNewBudget" text="Add New Budget" />
            <TextField fx:id="newBudgetField" prefHeight="138.0" prefWidth="509.0" promptText="Enter New Budget" /> <!-- Added TextField for new budget -->
        </VBox>

        <!-- Expense List -->
        <VBox style="-fx-background-color: lightgray;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Expenses" />
            <ListView fx:id="expenseListView" prefHeight="389.0" prefWidth="509.0" />
            <Button onAction="#viewAllExpenses" text="View All Expenses" />
            <Button onAction="#addNewExpense" text="Add New Expense" />
            <TextField fx:id="newExpenseField" prefHeight="159.0" prefWidth="509.0" promptText="Enter New Expense" /> <!-- Added TextField for new expense -->
        </VBox>
    </SplitPane>
    
    <!-- Buttons for Logout and Back -->
    <Button layoutX="960.0" layoutY="781.0" onAction="#logout" text="Logout" />
    <Button layoutX="903.0" layoutY="781.0" onAction="#goBack" prefHeight="25.0" prefWidth="50.0" text="Back" />
</AnchorPane>
