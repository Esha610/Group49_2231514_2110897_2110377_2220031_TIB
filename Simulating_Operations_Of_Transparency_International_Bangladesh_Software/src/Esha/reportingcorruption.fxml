<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="624.0" prefWidth="1012.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Esha.ReportingCorruptionController">
    <children>
        <BorderPane prefHeight="624.0" prefWidth="1012.0">
            <top>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="53.0" prefWidth="1011.0" text="Reporting Corruption Form" textAlignment="CENTER" textFill="#e81a1a">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font></Label>
            </top>
            <center>
                <VBox alignment="CENTER" spacing="10.0">
                    <Label prefHeight="29.0" prefWidth="54.0" text="Location" />
                    <TextArea fx:id="locationTextArea" prefHeight="51.0" prefWidth="1012.0" />
                    <Label text="Date of Incident" />
                    <DatePicker fx:id="datePicker" prefHeight="52.0" prefWidth="1012.0" />
                    <Label text="Description" />
                    <TextArea fx:id="descriptionTextArea" prefHeight="167.0" prefWidth="991.0" />
                    <Label text="Attach Evidences" />
                   
                </VBox>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="57.0" prefWidth="646.0" spacing="20.0">
                    <Button fx:id="submitButton" mnemonicParsing="false" onAction="#submitForm" text="Submit" />
                    <Button fx:id="backButton" mnemonicParsing="false" onAction="#goBack" text="Back" />
                    <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logOut" text="Log Out" />
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
