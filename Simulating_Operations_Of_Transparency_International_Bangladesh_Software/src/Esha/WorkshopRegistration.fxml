<AnchorPane id="AnchorPane" prefHeight="601.0" prefWidth="724.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Esha.WorkshopRegistrationController">
    <children>
        <BorderPane layoutX="16.0" prefHeight="540.0" prefWidth="692.0">
            <top>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="200.0" text="Workshop Registration Form" />
            </top>
            <center>
                <ScrollPane fitToHeight="true" fitToWidth="true">
                    <content>
                        <VBox prefHeight="455.0" prefWidth="690.0" spacing="10.0">
                            <Label text="Name" />
                            <TextField fx:id="nameTextField" prefWidth="150.0" />
                            <Label text="E-mail" />
                            <TextField fx:id="emailTextField" prefWidth="150.0" />
                            <Label text="Mobile Number" />
                            <TextField fx:id="mobileTextField" prefWidth="150.0" />
                            <Label text="Area of Workshop" />
                            <ChoiceBox fx:id="areaChoiceBox" prefWidth="150.0" />
                            <Label text="Place of Workshop" />
                            <ChoiceBox fx:id="placeChoiceBox" prefWidth="150.0" />
                     <Label text="Timing" />
                     <TextField />
                            <Label text="Joining Method" />
                            <HBox>
                                <RadioButton fx:id="virtualRadioButton" text="Virtual" />
                                <RadioButton fx:id="inPersonRadioButton" text="In Person" />
                            </HBox>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>
            <bottom>
                <HBox alignment="CENTER" prefHeight="47.0" prefWidth="692.0" spacing="20.0">
                    <Button mnemonicParsing="false" onAction="#submitForm" text="Submit" />
                    <Button layoutX="329.0" layoutY="48.0" mnemonicParsing="false" onAction="#goBack" text="Back" />
                    <Button layoutX="366.0" layoutY="48.0" mnemonicParsing="false" onAction="#logOut" text="Log Out" />
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</AnchorPane>
