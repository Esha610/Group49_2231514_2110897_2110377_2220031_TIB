<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="742.0" prefWidth="967.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Esha.DataRepositoryController">

    <!-- Header -->
    <VBox layoutX="10.0" layoutY="10.0" spacing="10.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Accessing Data Repository Of The TIB On Governance" />
        <Label text="Browse and access data related to governance from the Transparency International Bangladesh (TIB) repository." />
    </VBox>

    <!-- Navigation Buttons -->
    <HBox layoutX="842.0" layoutY="648.0" spacing="10.0">
        <Button onAction="#goBack" text="Back" />
        <Button onAction="#exitApplication" text="Exit" />
    </HBox>

    <!-- Repository Content -->
    <VBox layoutX="10.0" layoutY="100.0" prefHeight="543.0" prefWidth="341.0" spacing="10.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Repository Content:" />
        <TreeView fx:id="repositoryTreeView" prefHeight="542.0" prefWidth="341.0" />
    </VBox>

    <!-- File Details -->
    <VBox layoutX="352.0" layoutY="100.0" prefHeight="543.0" prefWidth="604.0" spacing="10.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="File Details:" />
        <TextArea fx:id="fileDetailsTextArea" prefHeight="556.0" prefWidth="564.0" />
    </VBox>

    <!-- Buttons -->
    <HBox layoutX="14.0" layoutY="648.0" spacing="10.0">
        <Button onAction="#viewFile" text="View File" />
        <Button onAction="#downloadFile" text="Download File" />
    </HBox>

</AnchorPane>
