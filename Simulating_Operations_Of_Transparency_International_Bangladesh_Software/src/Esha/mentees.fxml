<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Mentee Requests" />
            <!-- Sample request item -->
            <VBox style="-fx-background-color: #f4f4f4; -fx-padding: 10px; -fx-border-radius: 5px;">
                <HBox spacing="10.0">
                    <Label style="-fx-font-size: 14px;" text="Mentee Name:" />
                    <Label style="-fx-font-size: 14px;" text="John Doe" />
                </HBox>
                <HBox spacing="10.0">
                    <Label style="-fx-font-size: 14px;" text="Mentee Email:" />
                    <Label style="-fx-font-size: 14px;" text="john@example.com" />
                </HBox>
                <!-- Accept and Decline buttons -->
                <HBox spacing="10.0">
                    <Button style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Accept" />
                    <Button style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Decline" />
                </HBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>

