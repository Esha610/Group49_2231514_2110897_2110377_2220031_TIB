<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="743.0" prefWidth="1031.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainpkg.ContactUsController">

    <!-- Header -->
    <VBox layoutX="10.0" layoutY="10.0" spacing="10.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Contact Us" />
        <Label text="Send us your feedback, inquiries, or suggestions." />
    </VBox>

    <!-- Navigation Buttons -->
    <HBox layoutX="14.0" layoutY="684.0" prefHeight="25.0" prefWidth="137.0" spacing="10.0">
        <Button onAction="#goBack" prefHeight="25.0" prefWidth="65.0" text="Back" />
        <Button onAction="#exitApplication" prefHeight="25.0" prefWidth="64.0" text="Exit" />
    </HBox>

    <!-- Contact Information -->
    <VBox layoutX="10.0" layoutY="101.0" prefHeight="128.0" prefWidth="258.0" spacing="10.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Contact Information:" />
        <Label text="Email: contact@example.com" />
        <Label text="Fax: +123456789" />
        <Label text="Phone: +123456789" />
    </VBox>

    <!-- Message Input -->
    <VBox layoutX="10.0" layoutY="229.0" prefHeight="455.0" prefWidth="753.0" spacing="10.0">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Your Message:" />
        <TextArea fx:id="messageTextArea" prefHeight="345.0" prefWidth="753.0" />
   
       <!-- Send Button -->
       <HBox spacing="10.0">
           <Button onAction="#sendMessage" prefHeight="25.0" prefWidth="108.0" text="Send" />
       </HBox>
    </VBox>

</AnchorPane>
